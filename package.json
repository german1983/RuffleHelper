{
  "name": "ruffle-helper",
  "version": "0.0.1",
  "description": "Automatic run ruffles in a smart way.",
  "engines": {
    "node": "12.x"
  },
  "main": "index.js",
  "scripts": {
    "serve": "node ./index.js",
    "app-dev": "npm run clean && npm run watch",
    "app-build": "npm run clean && npm run heroku-postbuild",
    "watch": "webpack --config webpack.dev.js --watch",
    "heroku-postbuild": "webpack --config webpack.prod.js -p",
    "clean": "rm -rf ./dist",
    "test": "node test.js"
  },
  "dependencies": {
    "ejs": "^2.5.6",
    "express": "^4.17.1",
    "react": "^16.11.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-root-plugin": "^0.10.0",
    "request": "^2.81.0",
    "tape": "^4.7.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.7.3",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.1",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/german1983/RuffleHelper"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
